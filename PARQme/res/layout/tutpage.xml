<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<ImageView android:layout_height="wrap_content" android:src="@drawable/page1"
		android:id="@+id/tutImageView" android:layout_width="wrap_content"
		android:layout_alignParentTop="true" android:layout_alignParentLeft="true"></ImageView>
	<Button android:id="@+id/tutNextPage" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Next"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"></Button>
	<Button android:id="@+id/tutPrevPage" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Prev"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"></Button>

</RelativeLayout>
