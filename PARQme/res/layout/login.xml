<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/backgroundlayer">
	<TextView
		android:id="@+id/email_label"
		android:text="Email"
		style="@style/FormLabel"/>
	<EditText
		android:id="@+id/emailForm"
		android:text="miguel@parqme.com"
		android:inputType="textEmailAddress"
		style="@style/FormField"/>
	<TextView
		android:id="@+id/password_label"
		android:text="Password"
		style="@style/FormLabel"/>
	<EditText
		android:id="@+id/passwordForm"
		android:inputType="textPassword"
		style="@style/FormField"/>
	<CheckBox android:id="@+id/rememberbox" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Remember me"
		android:layout_marginLeft="15dp" android:layout_marginTop="15dp"/>
	<Button android:id="@+id/loginButton" android:layout_width="wrap_content"
		android:text="Log In" android:layout_height="wrap_content" android:minWidth="100dp"
		android:layout_gravity="right" android:layout_marginTop="15dp"
		android:layout_marginRight="15dp"/>
	<Button android:id="@+id/registerbutton" android:layout_width="wrap_content"
		android:text="Sign up" android:layout_height="wrap_content" android:minWidth="100dp"
		android:layout_gravity="right" android:layout_marginTop="15dp"
		android:layout_marginRight="15dp"/>
</LinearLayout>
