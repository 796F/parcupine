<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView1" android:layout_width="wrap_content" android:text="username"  android:layout_marginRight="0px" android:layout_alignParentRight="true"></TextView>
    <TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/textView2" android:layout_width="wrap_content" android:text="PARQ" android:layout_alignParentLeft="true"></TextView>
    <TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/textView3" android:layout_marginTop="70px" android:layout_marginLeft="50px" android:layout_width="wrap_content" android:text="Welcome Bob!" android:layout_alignParentLeft="true"></TextView>
    <TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView4" android:text="    Enjoy your stay blah" android:layout_below="@+id/textView3"   android:layout_width="match_parent"></TextView>
    <TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/textView5" android:layout_width="wrap_content" android:text="Time Left_____________" android:layout_below="@+id/textView4" android:layout_alignLeft="@+id/textView4" android:layout_alignRight="@+id/textView4" android:layout_marginTop="100px" android:layout_marginLeft="50px"></TextView>
    <Button android:layout_height="wrap_content" android:layout_below="@+id/textView5" android:text="REFILL" android:id="@+id/refillbutton" android:layout_width="match_parent" android:layout_marginTop="50px"></Button>
    <Button android:layout_height="wrap_content" android:layout_below="@+id/refillbutton" android:text="UNPARQ" android:id="@+id/unparqbutton" android:layout_width="wrap_content" android:layout_alignLeft="@+id/refillbutton" android:layout_alignRight="@+id/refillbutton" android:layout_marginTop="50px"></Button>
    
</RelativeLayout>
