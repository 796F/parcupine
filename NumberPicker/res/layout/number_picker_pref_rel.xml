  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    
    <com.quietlycoding.android.picker.NumberPicker
        android:id="@+id/pref_num_picker"
        android:layout_width="fill_parent"
        android:layout_marginTop="25dip" android:layout_height="wrap_content"/>
    <TextView android:text="Set Minutes" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:id="@+id/textView1"
	android:textAppearance="?android:attr/textAppearanceMedium"
	android:layout_alignParentTop="true" android:layout_centerHorizontal="true"></TextView>
    
    
</RelativeLayout>
